
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="~/Content/css/customLogin.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-offset-4 col-md-4">
                <div id="login-section">
                    <form action="~/admin/account/Login" method="post">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label for="username">Kullanıcı Adı</label>
                            <input type="text" name="UserName" value="" class="form-control" placeholder="Kulanıcı Adı..." />
                        </div>
                        <div class="form-group">
                            <label for="password">Şifre</label>
                            <input type="text" name="Password" value="" class="form-control" placeholder="Şifre..." />
                        </div>
                        <input type="submit" name="name" value="Giriş Yap" class="btn btn-success form-control" />
                        <div id="validation-summary" class="@TempData["class"]">
                            @Html.ValidationSummary(false)
                            <div id="credentials-error">
                                @ViewData["error"]
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>