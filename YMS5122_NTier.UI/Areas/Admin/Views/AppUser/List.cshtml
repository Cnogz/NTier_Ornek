
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<NTier.Model.Option.AppUser>

<div class="col-md-12">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Kullanıcı Adı</th>
                <th>Şifre</th>
                <th>Telefon No</th>
                <th>Email</th>
                <th>Adres</th>
                <th>Rol</th>
                <th>Fotoğraf</th>
                <th colspan="2">Güncelle / Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.LastName</td>
                    <td>@item.UserName</td>
                    <td>@item.Password</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>@item.Role</td>
                    <td><img src="@item.ImagePath" style="display:block" width="30" height="30" /></td>
                    <td>
                        <a href="/Admin/AppUser/Update/@item.Id">Güncelle</a>
                        /
                        <a href="/Admin/AppUser/Delete/@item.Id">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



